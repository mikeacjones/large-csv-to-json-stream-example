payload map {
    "earliestDt": $.cdc_case_earliest_dt,
    "reportDt": $.cdc_report_dt,
    "spectDt": $.pos_spec_dt,
    "onsetDt": $.onset_dt,
    "status": $.current_status,
    "patient": {
      "sex": $.sex,
      "ageGroup": $.age_group,
      "raceEthnicity": $.race_ethnicity_combined,
      "hospYn": $.hosp_yn,
      "icuYn": $.icu_yn,
      "deathYn": $.death_yn,
      "medCondYn": $.medcond_yn
    }
  }]]></ee:set-payload>
			</ee:message>
		</ee:transform>
